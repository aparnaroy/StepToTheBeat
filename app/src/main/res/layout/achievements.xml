<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    tools:context=".AchievementsActivity"
    android:id="@+id/achievements">

    <!-- Top Menu Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#DBFAED"
        android:titleTextColor="?attr/colorOnPrimary"/>

    <!-- Header Section -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Achievements"
        android:fontFamily="@font/poller_one"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"/>

    <!-- Achievements Button -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/achievementsButton"
        android:transitionName="achievements"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/trophy"
        android:contentDescription="Achievements"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:layout_gravity="center" /> <!-- This centers the button horizontally -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"/>

    <!-- Achievements List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="577dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="8dp">

            <!-- Achievement 1 -->
            <LinearLayout
                android:id="@+id/achievement1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/orbitron"
                    android:textStyle="bold"
                    android:text="Walk with the app for the first time!\nStatus: Locked"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Trophy Icon"
                    android:src="@drawable/trophy" />
            </LinearLayout>

            <!-- Achievement 2 -->
            <LinearLayout
                android:id="@+id/achievement2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/orbitron"
                    android:textStyle="bold"
                    android:text="Exercise for 1 hour in a single session!\nStatus:Locked"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Trophy Icon"
                    android:src="@drawable/trophy" />
            </LinearLayout>

            <!-- Achievement 3 -->

            <LinearLayout
                android:id="@+id/achievement3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/orbitron"
                    android:textStyle="bold"
                    android:text="Exercise for 14 days in a row!\nStatus:Locked"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Trophy Icon"
                    android:src="@drawable/trophy" />
            </LinearLayout>

            <!-- Achievement 4 -->

            <LinearLayout
                android:id="@+id/achievement4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/orbitron"
                    android:textStyle="bold"
                    android:text="Run with the app for the first time!\nStatus: Locked"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Trophy Icon"
                    android:src="@drawable/trophy" />
            </LinearLayout>

            <!-- Achievement 5 -->

            <LinearLayout
                android:id="@+id/achievement5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/orbitron"
                    android:textStyle="bold"
                    android:text="Power walk with the app for the first time!\nStatus: Locked"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Trophy Icon"
                    android:src="@drawable/trophy" />
            </LinearLayout>

            <!-- Achievement 6 -->

            <LinearLayout
                android:id="@+id/achievement6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/orbitron"
                    android:textStyle="bold"
                    android:text="Exercise for 21 days in a row!\nStatus: Locked"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Trophy Icon"
                    android:src="@drawable/trophy" />
            </LinearLayout>

            <!-- Achievement 7 -->

            <LinearLayout
                android:id="@+id/achievement7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/orbitron"
                    android:textStyle="bold"
                    android:text="Exercise for 50 days in a row!\nStatus: Locked"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Trophy Icon"
                    android:src="@drawable/trophy" />
            </LinearLayout>

            <!-- Achievement 8 -->

            <LinearLayout
                android:id="@+id/achievement8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/orbitron"
                    android:textStyle="bold"
                    android:text="Exercise for 100 days in a row!\nStatus:Locked"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Trophy Icon"
                    android:src="@drawable/trophy" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
