<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".HomeActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="75sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Profile Button (Circular with border) -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profileButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/profile"
        android:contentDescription="Profile"
        android:layout_marginTop="176dp"
        android:layout_marginStart="30dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Settings Button (Circular with border) -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settingsButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/settings_gear"
        android:contentDescription="Settings"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Start Workout Button (Circular with border) -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/startWorkoutButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/run"
        android:contentDescription="Start Workout"
        android:layout_marginBottom="176dp"
        android:layout_marginStart="30dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Achievements Button (Circular with border) -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/achievementsButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/trophy"
        android:contentDescription="Achievements"
        android:layout_marginBottom="136dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
